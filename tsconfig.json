{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "noUnusedParameters": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "typeRoots": ["./src/types", "./node_module/@types"],
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
